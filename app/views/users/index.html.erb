<div class='container my-3'>
    <div class='row'>
        <div class='col-md-3'>
            <%= render 'books/list', user: @user %>
            <%= render 'books/list2', book: @book %>
        </div>
        <div class='col-md-8 offset-md-1'>
            <h1>users</h1>
            <table class='table table-hover table-inverse mx-auto'>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th></th>
                        <th colspan='3'></th>
                    </tr>
                </thead>
                <tbody>
                     <% @users.each do |user| %>
                        <tr>
                            <td style='width: 300px;'>
                                <p><%= image_tag user.get_profile_image(100, 100) %></p> 
                            </td>
                            <td>
                                <p><%= user.name %></p>
                            </td>
                            <td>
                                <p><%= link_to 'Show', user_path(user) %></p>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
           </table>
        </div>
    </div>
</div>
