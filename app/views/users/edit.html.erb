<div class='container'>
    <div class='d-flex justify-content-center'>
        <div class='my-5'>
            <h2>Edit Profile</h2>
            <% if @user.errors.any? %>
                <div>
                    <div><%= @user.errors.count %> errors prohibited this book from being saved:</div>
                    <div>
                        <ul>
                            <% @user.errors.full_messages.each do |message| %>
                                <li></span><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
            <%= form_with model: @user do |f| %>
                <div class='my-3'>
                    <label for='inputName'>Name</label></br>
                    <%= f.text_field :name, class: 'form-control', style: 'font-size: 16px; width: 450px;', autofocus: true, id: 'inputName', placeholder: 'name' %>
                </div>
                <div class='my-3'>
                    <label for='inputImage'>profile image</label></br>
                    <%= f.file_field :profile_image, placeholder: 'profileImage', accept: 'image/*' %>
                </div>
                <div class='my-3'>
                    <label for='inputCaption'>Introduction</label></br>
                    <%= f.text_area :introduction, class: 'form-control', style: 'font-size: 16px; width: 450px;', autofocus: true, id:'inputCaption', placeholder: 'introduction' %>
                </div>
                <%= f.submit 'Update User', class: 'btn btn-dark btn-custom;' %>
            <% end %>
        </div>
    </div>
</div>